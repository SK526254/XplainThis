<div class="flex   ">
  <div class="fixed-content-v flex-initial md:flex md:items-center h-screen w-2/12">
    <div class="m-auto px-1/10  border-indigo-950 border-r-2 hidden  font-semibold items-center md:flex flex-col md:text-2xl md: md:justify-items-center text-center  md:gap-y-12  ">

      <% topics.forEach(topic => {%>
      <div class="">
        <a class="" href="/topics/<%=topic.name%>"><%= topic.name %> <%= topic.questionCount %></a>
      </div>
      <% }); %>
    </div>
  </div>
  <div class="md:ml-2/12">
    <div class="m-4 md:m-8 ">
      <h1 class="text-2xl font-semibold md:text-5xl"><%= topic%></h1>
    </div>
    <div class="block font-semibold text-3xl ml-8 ">
      <%= question %> ?
    </div>
    <form action="/topics/<%= topic%>/<%= question%>" method="post">
      <div style="margin: 0 3% ;">
        <h2 class="text-3xl m-4">Answer:</h2>

        <div>
          <textarea class="border-indigo-950 border-2 rounded-lg p-4" name="answerContent" autofocus required id="" cols="100" rows="3"></textarea>
        </div>
        <div style="margin:2%  0 ;">
          <button class="mx-4 rounded-lg px-2 text-lg bg-txtColor text-bgFontColor border-indigo-950 border-2 hover:text-txtColor hover:bg-bgFontColor  duration-300 ease-in-out" type="submit">Add Answer</button>
        </div>
      </div>
    </form>

  </div>

  <div class="w-2/12 hidden lg:block">

  </div>
</div>